//--------------------------------- Description ----------------------------------//
//
// This is a snippet you can use in your snippets files
//
//--------------------------------------------------------------------------------//


//----------------------------------- Authors ------------------------------------//
//
// Sébastien HERT
//
//--------------------------------------------------------------------------------//


//----------------------------------- Commands -----------------------------------//

{
	"snippet": {
		"prefix" : ["snippet"],
		"body" : [
			"\"${1:id}\" : {",
				"\t\"prefix\" : [\"${2:prefix}\"],",
				"\t\"body\" : [",
					"\t\t${3://body}",
				"\t],",
				"\t\"description\" : \"${4:description}\"",
			"},"
		],
		"description": "A template for snippets"
	},
	
	"snippet doc" : {
		"prefix" : ["snippetDoc", "doc", "file"],
		"body" : [
			"//========$1$2 $TM_FILENAME $1========//\n\n",


			"//--------------------------------- Description ----------------------------------//",
			"//",
			"// $3",
			"//",
			"//--------------------------------------------------------------------------------//\n\n",


			"//----------------------------------- Authors ------------------------------------//",
			"//",
			"// Sébastien HERT$4",
			"//",
			"//--------------------------------------------------------------------------------//\n\n",


			"//----------------------------------- Commands -----------------------------------//",
			"\n{\n\n\n}\n",
			"//--------------------------------------------------------------------------------//\n\n",


			"//================================================================================//",

		],
	"description" : "Adds the doc for snippets files"
	},
}

//--------------------------------------------------------------------------------//


//================================================================================//

